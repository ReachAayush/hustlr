<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FriendHomeActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editHomeSearchFriend"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="search a friend"
        android:layout_toLeftOf="@+id/btnHomeSearchFriend"
        android:layout_toStartOf="@+id/btnHomeSearchFriend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ray&apos;s Portfolio"
        android:id="@+id/textPortfolioLabel"
        android:layout_below="@+id/editHomeSearchFriend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3,753"
        android:id="@+id/textCashValue"
        android:layout_below="@+id/textPortfolioLabel"
        android:layout_alignRight="@+id/btnHomeSearchFriend"
        android:layout_alignEnd="@+id/btnHomeSearchFriend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash:"
        android:id="@+id/textCashLabel"
        android:layout_alignTop="@+id/textCashValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textCashValue"
        android:layout_alignRight="@+id/textPortfolioLabel"
        android:layout_alignEnd="@+id/textPortfolioLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/btnHomeSearchFriend"
        android:layout_alignBottom="@+id/editHomeSearchFriend"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current"
        android:id="@+id/textCurrentPriceLabel"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textCashLabel"
        android:layout_toRightOf="@+id/textCashLabel"
        android:layout_toEndOf="@+id/textCashLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bought"
        android:id="@+id/textBoughtPriceLabel"
        android:layout_alignTop="@+id/textCurrentPriceLabel"
        android:layout_toLeftOf="@+id/btnHomeSearchFriend"
        android:layout_toStartOf="@+id/btnHomeSearchFriend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSCO"
        android:id="@+id/textSampleStock1"
        android:layout_alignTop="@+id/textSampleCurrentPrice1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSampleCurrentPrice1"
        android:text="$29.14"
        android:layout_below="@+id/textCurrentPriceLabel"
        android:layout_toRightOf="@+id/textCashLabel"
        android:layout_toEndOf="@+id/textCashLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$30.11"
        android:id="@+id/textSampleBoughtPrice1"
        android:layout_below="@+id/textBoughtPriceLabel"
        android:layout_alignLeft="@+id/textBoughtPriceLabel"
        android:layout_alignStart="@+id/textBoughtPriceLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,500"
        android:id="@+id/textSampleQuantity1"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textBoughtPriceLabel"
        android:layout_alignRight="@+id/textSampleQuantity2"
        android:layout_alignEnd="@+id/textSampleQuantity2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textCurrentPriceLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BA"
        android:id="@+id/textSampleStock2"
        android:layout_below="@+id/textSampleStock1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$146.11"
        android:id="@+id/textSampleBoughtPrice2"
        android:layout_alignTop="@+id/textSampleCurrentPrice2"
        android:layout_alignRight="@+id/textBoughtPriceLabel"
        android:layout_alignEnd="@+id/textBoughtPriceLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$147.18"
        android:id="@+id/textSampleCurrentPrice2"
        android:layout_alignTop="@+id/textSampleStock2"
        android:layout_alignRight="@+id/textSampleCurrentPrice1"
        android:layout_alignEnd="@+id/textSampleCurrentPrice1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:id="@+id/textSampleQuantity2"
        android:layout_alignTop="@+id/textSampleBoughtPrice2"
        android:layout_alignRight="@+id/textCashValue"
        android:layout_alignEnd="@+id/textCashValue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back Home"
        android:id="@+id/buttonBackHome"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textCashValue"
        android:layout_alignEnd="@+id/textCashValue" />

</RelativeLayout>
